#include <sourcemod>
#include <CodD0_engine>
#include <CodD0/skills/CodD0_skill_damage>

public Plugin myinfo =  {
	name = "CodD0 Perk: Amadeus' bullets",
	author = "d0naciak",
	description =  "Amadeus' bullets",
	version = "1.0",
	url = "d0naciak.pl"
}

int g_perkID;
bool g_hasPerk[MAXPLAYERS + 1];

public void OnPluginStart() {
	g_perkID = CodD0_RegisterPerk("Naboje Amadeusza", "Zadajesz LW(+int) obrazeń więcej", 8, 16);
}

public void OnPluginEnd() {
	CodD0_UnregisterPerk(g_perkID);
}

public Action CodD0_PerkChanged(int client, int perkID, int perkValue) {
	if(g_perkID != perkID && g_hasPerk[client]) {
		CodD0_SetClientIntDmgMultiplier(client, CodD0_SkillSlot_Perk, CSWeapon_NONE, 0.0);
		CodD0_SetClientDmgBonus(client, CodD0_SkillSlot_Perk, CSWeapon_NONE, 0);
		g_hasPerk[client] = false;
	}
	
	return Plugin_Continue;
}

public void CodD0_PerkChanged_Post(int client, int perkID, int perkValue) {
	if (perkID == g_perkID) {
		CodD0_SetClientIntDmgMultiplier(client, CodD0_SkillSlot_Perk, CSWeapon_NONE, 0.04);
		CodD0_SetClientDmgBonus(client, CodD0_SkillSlot_Perk, CSWeapon_NONE, perkValue);
		g_hasPerk[client] = true;
	}
}