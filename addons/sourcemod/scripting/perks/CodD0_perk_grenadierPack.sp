#include <sourcemod>
#include <CodD0_engine>

public Plugin myinfo =  {
	name = "CodD0 Perk: Grenadier's pack",
	author = "d0naciak",
	description = "Grenadier's pack",
	version = "1.0",
	url = "d0naciak.pl"
}

int g_perkID;
public void OnPluginStart() {
	g_perkID = CodD0_RegisterPerk("Zestaw Grenadiera", "Dostajesz pełen zestaw granatów");
}

public void OnPluginEnd() {
	CodD0_UnregisterPerk(g_perkID);
}

public void CodD0_PerkChanged_Post(int client, int perkID, int perkValue) {
	static bool hasPerk[MAXPLAYERS + 1];

	if (perkID == g_perkID) {
		if (!hasPerk[client]) {
			CodD0_GiveClientWeapon(client, CSWeapon_HEGRENADE);
			CodD0_GiveClientWeapon(client, CSWeapon_FLASHBANG);
			CodD0_GiveClientWeapon(client, CSWeapon_FLASHBANG);
			CodD0_GiveClientWeapon(client, CSWeapon_SMOKEGRENADE);
			hasPerk[client] = true;
		}
	} else if (hasPerk[client]) {
		CodD0_TakeClientWeapon(client, CSWeapon_HEGRENADE);
		CodD0_TakeClientWeapon(client, CSWeapon_FLASHBANG);
		CodD0_TakeClientWeapon(client, CSWeapon_FLASHBANG);
		CodD0_TakeClientWeapon(client, CSWeapon_SMOKEGRENADE);
		hasPerk[client] = false
	}
}